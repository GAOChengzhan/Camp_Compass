<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for ="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="invalid-feedback">
                    Please provide a campground name.
                </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for ="location">Location</label>
                <input  class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="invalid-feedback">
                    Please provide a campground location.
                </div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for ="image">Image File</label>
                <input  class="form-control" type="file" id="image" name="campground[image]" mutiple required>
                <div class="invalid-feedback">
                    Please provide a image.
                </div>
            </div> -->
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <!-- <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price" 
                    aria-describedby="price-label" name="campground[price]" required>
                    <div class="invalid-feedback">
                        Please provide a price.
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for ="description">Description</label>
                <textarea  class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                <div class="invalid-feedback">
                    Please provide a campground description.
                </div>
            </div>
            <div class="mb-3">
                <button class ="btn btn-success">Add Campground</button>
            </div>
            
        </form>
    </div>
</div>

